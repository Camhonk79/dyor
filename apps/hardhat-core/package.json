{
  "name": "hardhat-core",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "account": "hardhat account",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "dev": "ts-node scripts/start.ts && hardhat node --network hardhat --export-all ../frontend/generated/contracts/hardhat_contracts.json",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy --reset --export-all ../frontend/generated/contracts/hardhat_contracts.json",
    "fork": "hardhat node --no-deploy --network hardhat --fork https://mainnet.infura.io/v3/460f40a260564ac4a4f4b3fffb032dad",
    "generate": "hardhat generate",
    "postdeploy": "hardhat run scripts/publish.ts",
    "send": "hardhat send",
    "test": "hardhat test --network hardhat",
    "watch": "ts-node scripts/watch.ts"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.4",
    "@nomiclabs/hardhat-etherscan": "3.0.0",
    "@nomiclabs/hardhat-waffle": "2.0.2",
    "@openzeppelin/contracts": "4.4.2",
    "@tenderly/hardhat-tenderly": "1.0.13",
    "chai": "4.3.6",
    "chalk": "4.1.0",
    "dotenv": "14.3.2",
    "ethers": "5.5.3",
    "hardhat": "2.8.3",
    "hardhat-abi-exporter": "2.8.0",
    "hardhat-deploy": "0.9.28",
    "hardhat-gas-reporter": "1.0.7",
    "node-watch": "0.7.3",
    "ts-node": "10.4.0"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "9.0.0",
    "@types/node": "17.0.12",
    "ts-node": "10.4.0",
    "tsconfig": "*",
    "typechain": "7.0.0",
    "typescript": "4.5.5"
  }
}
